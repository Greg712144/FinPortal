                                                <div class="row justify-content-center">
                                                    <div class="col-lg-10 mt-3">
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">house</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", @placeholder = "Bank Name", required = "required" })
                                                            </div>
                                                        </div>
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">local_atm</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.InitialBalance, new { @class = "form-control", @placeholder = "Initial Balance", required = "required" })

                                                            </div>
                                                        </div>
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">local_atm</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.CurrentBalance, new { @class = "form-control", @placeholder = "Current Balance", required = "required" })
                                                     
                                                            </div>
                                                        </div>
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">local_atm</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.LowLevelBalance, new { @class = "form-control", @placeholder = "Low Level Balance", required = "required" })
                                                              
                                                            </div>
                                                        </div>
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">atm</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.EnumDropDownListFor(m => m.Type, new { @class = "form-control", @placeholder = "Account type", required = "required" })
                                                         
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="budget">
                                                <h5 class="info-text"> What are your budgets? </h5>
                                                <div class="row justify-content-center">
                                                    <div class="col-lg-10 mt-3">

                                                            <div class="input-group form-control-lg">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text">
                                                                        <i class="material-icons">post_add</i>
                                                                    </span>
                                                                </div>
                                                                <div class="form-group">
                                                                    @Html.TextBoxFor(m => m.BudName, new { @class = "form-control", @placeholder = "Budget Name", required = "required" })
                                                                </div>
                                                            </div>
                                                            <div class="input-group form-control-lg">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text">
                                                                        <i class="material-icons">notes</i>
                                                                    </span>
                                                                </div>
                                                                <div class="form-group">
                                                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Description", required = "required" })

                                                                </div>
                                                            </div>
                                                           
                                                     </div>
                                                    
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="bud">
                                                <div class="row justify-content-center">
                                                    <div class="col-lg-10 mt-3">

                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">post_add</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.BudItemName, new { @class = "form-control", @placeholder = "Budget Item Name", required = "required" })
                                                            </div>
                                                        </div>
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">notes</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.BudItemDescription, new { @class = "form-control", @placeholder = "Budget Item Description", required = "required" })

                                                            </div>
                                                        </div>
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">post_add</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.TargetAmount, new { @class = "form-control", @placeholder = "Target Amount", required = "required" })
                                                            </div>
                                                        </div>
                                                        <div class="input-group form-control-lg">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="material-icons">notes</i>
                                                                </span>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.TextBoxFor(m => m.CurrentAmount, new { @class = "form-control", @placeholder = "Current Amount", required = "required" })

