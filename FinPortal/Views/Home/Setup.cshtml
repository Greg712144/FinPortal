                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="col-md-8 col-12 mr-auto ml-auto">
                        <!--      Wizard container        -->
                        <div class="wizard-container">
                            <div class="card card-wizard" data-color="green" id="wizardProfile">
                              
