@using FinPortal.Models
@using FinPortal.ViewModels
@model IEnumerable<LobbyUser>
@{
    ViewBag.Title = "Lobby";
    var lobbyist = User.Identity.Name;
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>FPE</title>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Images/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Images/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="~/Content/material-kit.css" rel="stylesheet" />


</head>
<body>
    <nav class="navbar navbar-color-on-scroll navbar-transparent fixed-top navbar-expand-lg" color-on-scroll="100">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" `>
                    FPE
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken();
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">
                                <i class="material-icons">directions_run</i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>
    <div class="page-header header-filter" data-parallax="true" style="background-image: url('../Images/bg3.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <div class="brand text-center">
                        <h1>The Waiting Room</h1>
                        <h3 class="title text-center">Are you planing on creating a household or waiting for an invite?</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main main-raised">
        <div class="container">
            <div class="section text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="title">
                                <h2 id="coloredShadows">FinPortal Express&#x2122;</h2>
                                <h4>You are one step closer to taking hold of your financial expenses! Create a household now and gain access to complete management and monitoring of your household finances. Or simply wait for the invitation from the head of your household. </h4>
                                <br>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <button class=" btn btn-success btn-lg btn-raised btn-round" data-toggle="modal" data-target="#cHouse">
                                <i class="material-icons">add</i> New House
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var user in Model)
                        {

                            <div class="col-md-4">
                                <div class="card card-blog">
                                    <div class="card-header card-header-image">
                                        <a>
                                            <img src=@user.Avatar alt="">
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-category text-info">@user.LastName, @user.FirstName</h6>
                                        <h4 class="card-title">
                                            <a>@user.Email</a>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer footer-default">
        <div class="container">
            <div class="copyright float-right">
                &copy;
                <b>
                    <script>document.write(new Date().getFullYear())</script> Customized by Gregorio Zambrana
                </b>
            </div>
        </div>
    </footer>

    @*Scripts*@
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap-material-design.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/nouislider.min.js"></script>
    <script src="~/Scripts/bootstrap-tagsinput.js"></script>
    <script src="~/Scripts/bootstrap-selectpicker.js"></script>
    <script src="~/Scripts/jasny-bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr.js"></script>
    <script src="~/Scripts/material-kit.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.sharrre.js"></script>

</body>
<div id="cHouse" class="modal fade" tabindex="-1" role="dialog" data-keyboard="false">
    <div class="modal-dialog modal-login" role="document">
        <!-- Modal content-->
        <div class="modal-content modal-lg">

            @Html.Partial("_HouseCreate", new Household())

        </div>
    </div>
</div>
</html>
