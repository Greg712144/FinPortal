@model FinPortal.Models.Household

<div class="card card-signup card-plain">
    <div class="modal-header">

        <div class="card-header card-header-primary text-center">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="material-icons">clear</i></button>
            <h4 class="card-title">New House Creation</h4>
        </div>
    </div>
    <br />
    @using (Html.BeginForm("Create", "Households", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="modal-body ">
            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">house</i>
                        </span>
                    </div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter House Name.." })
                </div>
            </span>
            <br />
            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">view_headline</i>
                        </span>
                    </div>
                    @Html.TextBoxFor(m => m.Greeting, new { @class = "form-control", @placeholder = "Enter Greeting.." })
                </div>
            </span>
        </div>
        <div class="modal-footer justify-content-center">
            <input type="submit" class="btn btn-rose btn-link btn-lg" value="Create" />
        </div>
    }
</div>
